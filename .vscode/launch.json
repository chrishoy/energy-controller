{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Energy Controller",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Web Server",
            "type": "debugpy",
            "request": "launch",
            "module": "src.web_server",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENERGY_CONTROLLER_ENV": "development"
            },
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Web Server (Production)",
            "type": "debugpy",
            "request": "launch",
            "module": "src.web_server",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENERGY_CONTROLLER_ENV": "production"
            },
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        }
    ]
}