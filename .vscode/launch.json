{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Energy Controller",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Web Server",
            "type": "debugpy",
            "request": "launch",
            "module": "src.web_server",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENERGY_CONTROLLER_ENV": "development"
            },
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Web Server (Production)",
            "type": "debugpy",
            "request": "launch",
            "module": "src.web_server",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "ENERGY_CONTROLLER_ENV": "production"
            },
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Vue Dev Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/front-end",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "npm: install - front-end"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Dev)",
            "configurations": [
                "Web Server",
                "Vue Dev Server"
            ],
            "stopAll": true,
            "presentation": {
                "order": 1
            }
        }
    ]
}